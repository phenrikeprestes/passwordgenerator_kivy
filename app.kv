<Tela@MDFloatLayout>
    MDLabel:
        size_hint_x: .7
        size_hint_y: .1
        text: 'Password Generator'
        pos_hint:{'center_x': .62, 'center_y': .8}
        font_size: '40sp'
        id: lb1

    MDTextField:
        hint_text: "How many digits?"
        mode: "rectangle"
        pos_hint:{'center_x': .5, 'center_y': .6}
        size_hint_x: .7
        size_hint_y: .1
        max_text_length: 2
        id: num

    MDRoundFlatButton:
        text: "Generate"
        size_hint_x: .7
        size_hint_y: .1
        pos_hint:{'center_x': .5, 'center_y': .4}
        on_press: root.showPassword()


    MDLabel:
        size_hint_x: .7
        size_hint_y: .2
        pos_hint:{'center_x': .50, 'center_y': .2}
        text: 'No password generate'
        font_size: '18sp'
        id: lb2

